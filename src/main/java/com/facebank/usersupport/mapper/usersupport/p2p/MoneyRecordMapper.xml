<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.facebank.usersupport.mapper.usersupport.p2p.MoneyRecordMapper">
  <resultMap id="BaseResultMap" type="com.facebank.usersupport.model.MoneyRecord">
  <id column="id" jdbcType="INTEGER" property="id" />
  <result column="toUserId" jdbcType="INTEGER" property="touserid" />
  <result column="toUserNickname" jdbcType="VARCHAR" property="tousernickname" />
  <result column="fromUserId" jdbcType="INTEGER" property="fromuserid" />
  <result column="fromUserNickname" jdbcType="VARCHAR" property="fromusernickname" />
  <result column="amount" jdbcType="DECIMAL" property="amount" />
  <result column="accountBalance" jdbcType="DECIMAL" property="accountbalance" />
  <result column="tradeType" jdbcType="SMALLINT" property="tradetype" />
  <result column="tradeTime" jdbcType="TIMESTAMP" property="tradetime" />
  <result column="tradeChannel" jdbcType="SMALLINT" property="tradechannel" />
  <result column="tradeComment" jdbcType="VARCHAR" property="tradecomment" />
  <result column="loanId" jdbcType="INTEGER" property="loanid" />
  <result column="loanTitle" jdbcType="VARCHAR" property="loantitle" />
  <result column="loanPortraitPath" jdbcType="VARCHAR" property="loanportraitpath" />
  <result column="outSerialNo" jdbcType="VARCHAR" property="outserialno" />
</resultMap>

  <sql id="Base_Column_List">
    id, toUserId, toUserNickname, fromUserId, fromUserNickname, amount, accountBalance, 
    tradeType, tradeTime, tradeChannel, tradeComment, loanId, loanTitle, loanPortraitPath, 
    outSerialNo
  </sql>

  <select id="selectByMobile" parameterType="java.util.Map" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from p2p.money_record
    <where>
      <if test="mobile != null and mobile != '' ">
        toUserNickname = #{mobile}
      </if>
      <if test="type == 1">
        and   tradeType&lt;1000
      </if>
      <if test="type == 2">
        and   tradeType&gt;=1000
      </if>
      <if test="starttime != null ">
        and #{starttime}&lt;=tradeTime
      </if>
      <if test="endtime != null ">
        and tradeTime&lt;=#{endtime}
      </if>
    </where>
     ORDER BY tradeTime DESC
  </select>

</mapper>